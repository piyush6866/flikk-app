<div class="min-h-screen pt-24 pb-16 flex items-center justify-center">
  <div class="w-full max-w-md px-4">
    <!-- Card -->
    <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 p-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="w-14 h-14 bg-slate-900 rounded-xl flex items-center justify-center mx-auto mb-4">
          <span class="text-white font-bold text-lg">k<span class="inline-block" style="transform: scaleX(-1);">k</span></span>
        </div>
        <h1 class="text-2xl font-bold text-slate-900 mb-2">Welcome Back</h1>
        <p class="text-slate-600">Log in to your flikk account</p>
      </div>

      <!-- Error Messages -->
      <% if flash[:alert] %>
        <div class="mb-6 p-4 bg-rose-50 border border-rose-200 rounded-xl">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-rose-700"><%= flash[:alert] %></span>
          </div>
        </div>
      <% end %>

      <!-- Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">Email Address</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
              </svg>
            </div>
            <%= f.email_field :email, 
                class: "w-full pl-12 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                placeholder: "you@example.com",
                autofocus: true,
                autocomplete: "email",
                required: true %>
          </div>
        </div>

        <!-- Password -->
        <div>
          <div class="flex justify-between items-center mb-2">
            <label class="block text-sm font-medium text-slate-700">Password</label>
            <%= link_to "Forgot password?", new_user_password_path, class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
          </div>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, 
                class: "w-full pl-12 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                placeholder: "Enter your password",
                autocomplete: "current-password",
                required: true %>
          </div>
        </div>

        <!-- Remember Me -->
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "w-4 h-4 text-indigo-600 bg-slate-50 border-slate-300 rounded focus:ring-indigo-500" %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-slate-600" do %>
            Keep me logged in
          <% end %>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <%= f.submit "Log In", 
              class: "w-full py-3.5 px-4 bg-gradient-to-r from-indigo-600 to-violet-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-violet-700 transition-all duration-300 shadow-lg shadow-indigo-500/25 hover:shadow-indigo-500/40 cursor-pointer" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-slate-500">Don't have an account?</span>
        </div>
      </div>

      <!-- Sign Up Links -->
      <div class="grid grid-cols-2 gap-4">
        <%= link_to new_user_registration_path(role: 'brand'), class: "py-3 px-4 text-center font-medium text-slate-700 bg-slate-100 rounded-xl hover:bg-slate-200 transition-colors" do %>
          <span class="block text-xs text-slate-500 mb-0.5">I'm a</span>
          Brand
        <% end %>
        <%= link_to new_user_registration_path(role: 'creator'), class: "py-3 px-4 text-center font-medium text-slate-700 bg-slate-100 rounded-xl hover:bg-slate-200 transition-colors" do %>
          <span class="block text-xs text-slate-500 mb-0.5">I'm a</span>
          Creator
        <% end %>
      </div>
    </div>

    <!-- Trust Badge -->
    <div class="mt-8 text-center">
      <div class="inline-flex items-center gap-2 text-sm text-slate-500">
        <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
        <span>Secure SSL encrypted login</span>
      </div>
    </div>
  </div>
</div>


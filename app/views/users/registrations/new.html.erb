<div class="min-h-screen pt-24 pb-16 flex items-center justify-center">
  <div class="w-full max-w-md px-4">
    <!-- Card -->
    <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 p-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <% if @role == 'brand' %>
          <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-violet-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg shadow-indigo-500/30">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-slate-900 mb-2">Create Brand Account</h1>
          <p class="text-slate-600">Start hiring talented creators today</p>
        <% else %>
          <div class="w-16 h-16 bg-gradient-to-br from-violet-500 to-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg shadow-violet-500/30">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-slate-900 mb-2">Join as Creator</h1>
          <p class="text-slate-600">Start earning money creating videos</p>
        <% end %>
      </div>

      <!-- Error Messages -->
      <% if resource.errors.any? %>
        <div class="mb-6 p-4 bg-rose-50 border border-rose-200 rounded-xl">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-rose-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h4 class="font-semibold text-rose-800 mb-1">Please fix the following errors:</h4>
              <ul class="text-sm text-rose-700 space-y-1">
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <%= f.hidden_field :role, value: @role %>

        <% if @role == 'brand' %>
          <!-- Brand Name -->
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Brand Name</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <%= f.text_field :brand_name, 
                  class: "w-full pl-12 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                  placeholder: "e.g., Mamaearth",
                  autofocus: true,
                  required: true %>
            </div>
          </div>
        <% else %>
          <!-- Creator Name -->
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Your Name</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <%= f.text_field :name, 
                  class: "w-full pl-12 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                  placeholder: "Your full name",
                  autofocus: true,
                  required: true %>
            </div>
          </div>

          <!-- Phone Number -->
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Phone Number</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <span class="text-slate-500 text-sm font-medium">+91</span>
              </div>
              <%= f.text_field :phone_number, 
                  class: "w-full pl-14 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                  placeholder: "9876543210",
                  pattern: "[0-9]{10}",
                  maxlength: 10,
                  required: true %>
            </div>
            <p class="text-xs text-slate-500 mt-1">We'll use this to verify your account</p>
          </div>
        <% end %>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">Email Address</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
              </svg>
            </div>
            <%= f.email_field :email, 
                class: "w-full pl-12 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                placeholder: "you@example.com",
                autofocus: @role == 'brand',
                autocomplete: "email",
                required: true %>
          </div>
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">Password</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, 
                class: "w-full pl-12 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                placeholder: "Create a strong password",
                autocomplete: "new-password",
                required: true %>
          </div>
          <p class="text-xs text-slate-500 mt-1">Minimum 6 characters</p>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <% if @role == 'brand' %>
            <%= f.submit "Create Brand Account", 
                class: "w-full py-3.5 px-4 bg-gradient-to-r from-indigo-600 to-violet-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-violet-700 transition-all duration-300 shadow-lg shadow-indigo-500/25 hover:shadow-indigo-500/40 cursor-pointer" %>
          <% else %>
            <%= f.submit "Join as Creator", 
                class: "w-full py-3.5 px-4 bg-gradient-to-r from-violet-600 to-purple-600 text-white font-semibold rounded-xl hover:from-violet-700 hover:to-purple-700 transition-all duration-300 shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 cursor-pointer" %>
          <% end %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-slate-500">Already have an account?</span>
        </div>
      </div>

      <!-- Login Link -->
      <%= link_to new_user_session_path, class: "block w-full py-3 px-4 text-center font-medium text-slate-700 bg-slate-100 rounded-xl hover:bg-slate-200 transition-colors" do %>
        Log In
      <% end %>

      <!-- Switch Role -->
      <div class="mt-6 text-center">
        <% if @role == 'brand' %>
          <p class="text-sm text-slate-600">
            Want to create content instead?
            <%= link_to "Join as Creator", new_user_registration_path(role: 'creator'), class: "text-indigo-600 font-medium hover:text-indigo-700" %>
          </p>
        <% else %>
          <p class="text-sm text-slate-600">
            Looking to hire creators?
            <%= link_to "Sign up as Brand", new_user_registration_path(role: 'brand'), class: "text-indigo-600 font-medium hover:text-indigo-700" %>
          </p>
        <% end %>
      </div>
    </div>

    <!-- Trust Badge -->
    <div class="mt-8 text-center">
      <div class="inline-flex items-center gap-2 text-sm text-slate-500">
        <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
        <span>Your data is secure and encrypted</span>
      </div>
    </div>
  </div>
</div>


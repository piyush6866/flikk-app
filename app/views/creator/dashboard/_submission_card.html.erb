<%# Compact Submission Card %>
<div class="flex items-center justify-between p-4 rounded-lg border border-slate-200 hover:border-slate-300 transition-colors bg-white">
  <div class="flex items-center gap-3 flex-1 min-w-0">
    <!-- Icon -->
    <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0 bg-slate-100">
      <% case submission.campaign.scenario %>
      <% when 'Unboxing' %>
        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
      <% when 'Testimonial' %>
        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
      <% when 'How-to' %>
        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path></svg>
      <% when 'Lifestyle' %>
        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
      <% else %>
        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
      <% end %>
    </div>
    
    <!-- Info -->
    <div class="min-w-0 flex-1">
      <div class="flex items-center gap-2">
        <h3 class="font-medium text-slate-900 text-sm truncate"><%= submission.campaign.product_name %></h3>
        <span class="flex-shrink-0 px-1.5 py-0.5 text-xs font-medium rounded bg-<%= submission.status_color %>-100 text-<%= submission.status_color %>-700">
          <%= submission.status_label %>
        </span>
      </div>
      <p class="text-xs text-slate-500 mt-0.5 truncate">
        <%= submission.campaign.scenario %> â€¢ <%= submission.campaign.user.brand_name %>
      </p>
    </div>
  </div>

  <!-- Right side: Earnings + Action -->
  <div class="flex items-center gap-4 ml-4">
    <div class="text-right hidden sm:block">
      <p class="text-sm font-semibold text-slate-900"><%= submission.formatted_creator_net %></p>
      <p class="text-xs text-slate-400">earnings</p>
    </div>
    
    <% if submission.applied? %>
      <span class="text-xs text-amber-600 font-medium px-2.5 py-1.5 bg-amber-50 rounded-md">Pending</span>
    <% elsif submission.can_upload? %>
      <%= link_to edit_submission_path(submission), class: "text-xs text-white font-medium px-3 py-1.5 bg-indigo-600 rounded-md hover:bg-indigo-700 transition-colors" do %>
        <% if submission.revision_requested? %>Revise<% else %>Upload<% end %>
      <% end %>
    <% elsif submission.uploaded? %>
      <span class="text-xs text-blue-600 font-medium px-2.5 py-1.5 bg-blue-50 rounded-md">In Review</span>
    <% elsif submission.content_approved? || submission.paid? %>
      <span class="text-xs text-emerald-600 font-medium px-2.5 py-1.5 bg-emerald-50 rounded-md flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
        <%= submission.paid? ? 'Paid' : 'Approved' %>
      </span>
    <% end %>
  </div>
</div>

<% if submission.revision_requested? && submission.brand_feedback.present? %>
  <div class="ml-13 mt-1 px-3 py-2 bg-rose-50 rounded-md border-l-2 border-rose-300">
    <p class="text-xs text-rose-700"><strong>Feedback:</strong> <%= submission.brand_feedback %></p>
  </div>
<% end %>

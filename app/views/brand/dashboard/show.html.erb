<div class="min-h-screen pt-20 pb-16 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header Row -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900">Dashboard</h1>
        <p class="text-sm text-slate-500 mt-0.5">Manage your campaigns and creators</p>
      </div>
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-6 text-sm mr-4">
          <div class="flex items-center gap-2">
            <span class="text-slate-500">Spent</span>
            <span class="font-semibold text-slate-900">₹<%= number_with_delimiter(@total_spent) %></span>
          </div>
          <div class="w-px h-4 bg-slate-200"></div>
          <div class="flex items-center gap-2">
            <span class="text-slate-500">Hired</span>
            <span class="font-semibold text-emerald-600"><%= @creators_hired %></span>
          </div>
        </div>
        <%= link_to new_campaign_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-slate-900 text-white text-sm font-medium rounded-lg hover:bg-slate-800 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          New Campaign
        <% end %>
      </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="flex items-center gap-6 mb-6 overflow-x-auto pb-2">
      <div class="flex items-center gap-2 px-3 py-1.5 bg-white rounded-full border border-slate-200 text-sm whitespace-nowrap">
        <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
        <span class="text-slate-600">Active</span>
        <span class="font-medium text-slate-900"><%= @active_campaigns %></span>
      </div>
      <div class="flex items-center gap-2 px-3 py-1.5 bg-white rounded-full border border-slate-200 text-sm whitespace-nowrap">
        <span class="w-2 h-2 rounded-full bg-slate-400"></span>
        <span class="text-slate-600">Total Campaigns</span>
        <span class="font-medium text-slate-900"><%= @total_campaigns %></span>
      </div>
      <div class="flex items-center gap-2 px-3 py-1.5 bg-white rounded-full border border-slate-200 text-sm whitespace-nowrap">
        <span class="w-2 h-2 rounded-full bg-amber-400"></span>
        <span class="text-slate-600">Applications</span>
        <span class="font-medium text-slate-900"><%= @pending_applications %></span>
      </div>
      <div class="flex items-center gap-2 px-3 py-1.5 bg-white rounded-full border border-slate-200 text-sm whitespace-nowrap">
        <span class="w-2 h-2 rounded-full bg-blue-500"></span>
        <span class="text-slate-600">In Progress</span>
        <span class="font-medium text-slate-900"><%= @in_progress %></span>
      </div>
      <div class="flex items-center gap-2 px-3 py-1.5 bg-white rounded-full border border-slate-200 text-sm whitespace-nowrap">
        <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
        <span class="text-slate-600">Completed</span>
        <span class="font-medium text-slate-900"><%= @completed %></span>
      </div>
    </div>

    <!-- Campaigns List -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm mb-6">
      <div class="flex items-center justify-between px-5 py-4 border-b border-slate-200">
        <h2 class="font-medium text-slate-900">Your Campaigns</h2>
        <% if @campaigns.any? %>
          <span class="text-xs text-slate-500"><%= @campaigns.count %> campaign<%= @campaigns.count == 1 ? '' : 's' %></span>
        <% end %>
      </div>
      
      <% if @campaigns.any? %>
        <div class="divide-y divide-slate-100">
          <% @campaigns.each do |campaign| %>
            <div class="flex items-center justify-between p-4 hover:bg-slate-50 transition-colors">
              <div class="flex items-center gap-3 flex-1 min-w-0">
                <!-- Status Icon -->
                <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0 bg-slate-100">
                  <% case campaign.status %>
                  <% when 'live' %>
                    <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.636 18.364a9 9 0 010-12.728m12.728 0a9 9 0 010 12.728m-9.9-2.829a5 5 0 010-7.07m7.072 0a5 5 0 010 7.07M13 12a1 1 0 11-2 0 1 1 0 012 0z"></path>
                    </svg>
                  <% when 'draft' %>
                    <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% else %>
                    <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  <% end %>
                </div>
                
                <!-- Campaign Info -->
                <div class="min-w-0 flex-1">
                  <div class="flex items-center gap-2">
                    <h3 class="font-medium text-slate-900 text-sm truncate"><%= campaign.product_name %></h3>
                    <span class="flex-shrink-0 px-1.5 py-0.5 text-xs font-medium rounded
                      <%= case campaign.status
                          when 'live' then 'bg-emerald-100 text-emerald-700'
                          when 'draft' then 'bg-slate-100 text-slate-600'
                          when 'completed' then 'bg-blue-100 text-blue-700'
                          else 'bg-slate-100 text-slate-500'
                          end %>">
                      <%= campaign.status.titleize %>
                    </span>
                  </div>
                  <p class="text-xs text-slate-500 mt-0.5 truncate">
                    <%= campaign.scenario %> • <%= campaign.duration_label %> • <%= campaign.created_at.strftime("%b %d") %>
                  </p>
                </div>
              </div>

              <!-- Right side -->
              <div class="flex items-center gap-4 ml-4">
                <div class="text-right hidden sm:block">
                  <p class="text-sm font-semibold text-slate-900"><%= campaign.formatted_price %></p>
                  <p class="text-xs text-slate-400">per video</p>
                </div>
                
                <div class="flex items-center gap-1">
                  <%= link_to campaign_path(campaign), class: "p-2 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-md transition-colors" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>
                  <%= link_to edit_campaign_path(campaign), class: "p-2 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-md transition-colors" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-10">
          <p class="text-slate-500 text-sm mb-3">No campaigns yet</p>
          <%= link_to new_campaign_path, class: "text-sm text-indigo-600 font-medium hover:text-indigo-700" do %>
            Create your first campaign →
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <%= link_to brand_creators_path, class: "flex items-center gap-3 p-4 bg-white rounded-xl border border-slate-200 hover:border-slate-300 transition-colors" do %>
        <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-medium text-slate-900">Browse Creators</h3>
          <p class="text-xs text-slate-500">Find the perfect match</p>
        </div>
      <% end %>

      <%= link_to brand_submissions_path, class: "flex items-center gap-3 p-4 bg-white rounded-xl border border-slate-200 hover:border-slate-300 transition-colors" do %>
        <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-medium text-slate-900">Applications</h3>
          <p class="text-xs text-slate-500">Review submissions</p>
        </div>
      <% end %>

      <div class="flex items-center gap-3 p-4 bg-white rounded-xl border border-slate-200 opacity-60">
        <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-medium text-slate-500">Get Help</h3>
          <p class="text-xs text-slate-400">Coming soon</p>
        </div>
      </div>
    </div>

  </div>
</div>

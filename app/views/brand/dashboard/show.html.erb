<div class="min-h-screen pt-20 pb-16 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header Row -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900">Dashboard</h1>
        <p class="text-sm text-slate-500 mt-0.5">Manage campaigns, applications and submissions</p>
      </div>
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-6 text-sm mr-4">
          <div class="flex items-center gap-2">
            <span class="text-slate-500">Spent</span>
            <span class="font-semibold text-slate-900">₹<%= number_with_delimiter(@total_spent) %></span>
          </div>
          <div class="w-px h-4 bg-slate-200"></div>
          <div class="flex items-center gap-2">
            <span class="text-slate-500">Hired</span>
            <span class="font-semibold text-emerald-600"><%= @creators_hired %></span>
          </div>
        </div>
        <%= link_to new_campaign_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-slate-900 text-white text-sm font-medium rounded-lg hover:bg-slate-800 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          New Campaign
        <% end %>
      </div>
    </div>

    <!-- Clickable Stats Row -->
    <div class="flex items-center gap-3 mb-6 overflow-x-auto pb-2">
      <%= link_to brand_dashboard_path(tab: 'campaigns'), class: "flex items-center gap-2 px-4 py-2 rounded-lg border text-sm whitespace-nowrap transition-colors #{@tab == 'campaigns' ? 'bg-slate-900 text-white border-slate-900' : 'bg-white text-slate-600 border-slate-200 hover:border-slate-300'}" do %>
        <span class="w-2 h-2 rounded-full <%= @tab == 'campaigns' ? 'bg-white' : 'bg-emerald-500' %>"></span>
        <span>Active</span>
        <span class="font-semibold"><%= @active_campaigns_count %></span>
      <% end %>
      
      <%= link_to brand_dashboard_path(tab: 'all_campaigns'), class: "flex items-center gap-2 px-4 py-2 rounded-lg border text-sm whitespace-nowrap transition-colors #{@tab == 'all_campaigns' ? 'bg-slate-900 text-white border-slate-900' : 'bg-white text-slate-600 border-slate-200 hover:border-slate-300'}" do %>
        <span class="w-2 h-2 rounded-full <%= @tab == 'all_campaigns' ? 'bg-white' : 'bg-slate-400' %>"></span>
        <span>All Campaigns</span>
        <span class="font-semibold"><%= @total_campaigns %></span>
      <% end %>
      
      <%= link_to brand_dashboard_path(tab: 'applications'), class: "flex items-center gap-2 px-4 py-2 rounded-lg border text-sm whitespace-nowrap transition-colors #{@tab == 'applications' ? 'bg-slate-900 text-white border-slate-900' : 'bg-white text-slate-600 border-slate-200 hover:border-slate-300'}" do %>
        <span class="w-2 h-2 rounded-full <%= @tab == 'applications' ? 'bg-white' : 'bg-amber-400' %>"></span>
        <span>Applications</span>
        <span class="font-semibold"><%= @applications_count %></span>
      <% end %>
      
      <%= link_to brand_dashboard_path(tab: 'in_progress'), class: "flex items-center gap-2 px-4 py-2 rounded-lg border text-sm whitespace-nowrap transition-colors #{@tab == 'in_progress' ? 'bg-slate-900 text-white border-slate-900' : 'bg-white text-slate-600 border-slate-200 hover:border-slate-300'}" do %>
        <span class="w-2 h-2 rounded-full <%= @tab == 'in_progress' ? 'bg-white' : 'bg-blue-500' %>"></span>
        <span>In Progress</span>
        <span class="font-semibold"><%= @in_progress_count %></span>
      <% end %>
      
      <%= link_to brand_dashboard_path(tab: 'completed'), class: "flex items-center gap-2 px-4 py-2 rounded-lg border text-sm whitespace-nowrap transition-colors #{@tab == 'completed' ? 'bg-slate-900 text-white border-slate-900' : 'bg-white text-slate-600 border-slate-200 hover:border-slate-300'}" do %>
        <span class="w-2 h-2 rounded-full <%= @tab == 'completed' ? 'bg-white' : 'bg-emerald-500' %>"></span>
        <span>Completed</span>
        <span class="font-semibold"><%= @completed_count %></span>
      <% end %>
    </div>

    <!-- Main Content Area -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm">
      
      <% if @tab == 'campaigns' || @tab == 'all_campaigns' %>
        <!-- Campaigns Tab -->
        <div class="px-5 py-4 border-b border-slate-200">
          <h2 class="font-medium text-slate-900"><%= @tab == 'campaigns' ? 'Active Campaigns' : 'All Campaigns' %></h2>
        </div>
        
        <% campaigns_to_show = @tab == 'campaigns' ? @campaigns.active : @campaigns %>
        <% if campaigns_to_show.any? %>
          <div class="divide-y divide-slate-100">
            <% campaigns_to_show.each do |campaign| %>
              <%= link_to campaign_path(campaign), class: "flex items-center justify-between p-4 hover:bg-slate-50 transition-colors block" do %>
                <div class="flex items-center gap-3 flex-1 min-w-0">
                  <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0 <%= campaign.live? ? 'bg-emerald-100' : 'bg-slate-100' %>">
                    <% if campaign.live? %>
                      <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.636 18.364a9 9 0 010-12.728m12.728 0a9 9 0 010 12.728m-9.9-2.829a5 5 0 010-7.07m7.072 0a5 5 0 010 7.07M13 12a1 1 0 11-2 0 1 1 0 012 0z"></path>
                      </svg>
                    <% else %>
                      <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    <% end %>
                  </div>
                  
                  <div class="min-w-0 flex-1">
                    <div class="flex items-center gap-2">
                      <h3 class="font-medium text-slate-900 text-sm truncate"><%= campaign.product_name %></h3>
                      <span class="flex-shrink-0 px-1.5 py-0.5 text-xs font-medium rounded <%= campaign.live? ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600' %>">
                        <%= campaign.status.titleize %>
                      </span>
                    </div>
                    <p class="text-xs text-slate-500 mt-0.5 truncate">
                      <%= campaign.scenario %> • <%= campaign.duration_label %> • <%= campaign.submissions.count %> submissions
                    </p>
                  </div>
                </div>

                <div class="flex items-center gap-4 ml-4">
                  <div class="text-right">
                    <p class="text-sm font-semibold text-slate-900"><%= campaign.formatted_price %></p>
                    <p class="text-xs text-slate-400">per video</p>
                  </div>
                  <svg class="w-5 h-5 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-slate-500 text-sm mb-3">No campaigns yet</p>
            <%= link_to new_campaign_path, class: "text-sm text-indigo-600 font-medium hover:text-indigo-700" do %>
              Create your first campaign →
            <% end %>
          </div>
        <% end %>

      <% elsif @tab == 'applications' %>
        <!-- Applications Tab -->
        <div class="px-5 py-4 border-b border-slate-200">
          <h2 class="font-medium text-slate-900">Pending Applications</h2>
          <p class="text-xs text-slate-500 mt-0.5">Creators waiting for your approval to start working</p>
        </div>
        
        <% if @applications.any? %>
          <div class="divide-y divide-slate-100">
            <% @applications.each do |submission| %>
              <div class="p-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3 flex-1 min-w-0">
                    <div class="w-10 h-10 bg-gradient-to-br from-slate-600 to-slate-700 rounded-full flex items-center justify-center text-white font-medium text-sm flex-shrink-0">
                      <%= submission.user.initials %>
                    </div>
                    
                    <div class="min-w-0 flex-1">
                      <div class="flex items-center gap-2">
                        <h3 class="font-medium text-slate-900 text-sm"><%= submission.user.name %></h3>
                        <span class="px-1.5 py-0.5 text-xs font-medium rounded bg-amber-100 text-amber-700">Pending</span>
                      </div>
                      <p class="text-xs text-slate-500 mt-0.5">
                        Applied to <span class="font-medium"><%= submission.campaign.product_name %></span> • <%= time_ago_in_words(submission.created_at) %> ago
                      </p>
                    </div>
                  </div>

                  <div class="flex items-center gap-2 ml-4">
                    <div class="text-right mr-2 hidden sm:block">
                      <p class="text-sm font-semibold text-slate-900"><%= submission.formatted_brand_cost %></p>
                      <p class="text-xs text-slate-400">total cost</p>
                    </div>
                    <%= button_to approve_creator_brand_submission_path(submission), method: :post, class: "px-3 py-1.5 bg-emerald-600 text-white text-xs font-medium rounded-md hover:bg-emerald-700 transition-colors" do %>
                      Approve
                    <% end %>
                    <%= button_to reject_creator_brand_submission_path(submission), method: :delete, class: "px-3 py-1.5 bg-slate-100 text-slate-600 text-xs font-medium rounded-md hover:bg-slate-200 transition-colors", data: { confirm: "Decline this application?" } do %>
                      Decline
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-slate-500 text-sm">No pending applications</p>
          </div>
        <% end %>

      <% elsif @tab == 'in_progress' %>
        <!-- In Progress Tab -->
        <div class="px-5 py-4 border-b border-slate-200">
          <h2 class="font-medium text-slate-900">In Progress</h2>
          <p class="text-xs text-slate-500 mt-0.5">Submissions awaiting upload or ready for review</p>
        </div>
        
        <% if @in_progress_submissions.any? %>
          <div class="divide-y divide-slate-100">
            <% @in_progress_submissions.each do |submission| %>
              <div class="p-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3 flex-1 min-w-0">
                    <div class="w-10 h-10 bg-gradient-to-br from-slate-600 to-slate-700 rounded-full flex items-center justify-center text-white font-medium text-sm flex-shrink-0">
                      <%= submission.user.initials %>
                    </div>
                    
                    <div class="min-w-0 flex-1">
                      <div class="flex items-center gap-2">
                        <h3 class="font-medium text-slate-900 text-sm"><%= submission.user.name %></h3>
                        <span class="px-1.5 py-0.5 text-xs font-medium rounded 
                          <%= case submission.status
                              when 'approved_to_upload' then 'bg-indigo-100 text-indigo-700'
                              when 'uploaded' then 'bg-blue-100 text-blue-700'
                              when 'revision_requested' then 'bg-rose-100 text-rose-700'
                              end %>">
                          <%= submission.status_label %>
                        </span>
                      </div>
                      <p class="text-xs text-slate-500 mt-0.5">
                        <span class="font-medium"><%= submission.campaign.product_name %></span> • <%= submission.campaign.scenario %>
                      </p>
                    </div>
                  </div>

                  <div class="flex items-center gap-3 ml-4">
                    <% if submission.uploaded? %>
                      <%= link_to brand_submission_path(submission), class: "flex items-center gap-2 px-3 py-1.5 bg-indigo-600 text-white text-xs font-medium rounded-md hover:bg-indigo-700 transition-colors" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Review Content
                      <% end %>
                    <% elsif submission.revision_requested? %>
                      <%= link_to brand_submission_path(submission), class: "text-xs text-rose-600 hover:underline" do %>
                        Waiting for revision →
                      <% end %>
                    <% else %>
                      <span class="text-xs text-slate-500">Awaiting upload</span>
                    <% end %>
                  </div>
                </div>
                
                <% if submission.revision_requested? && submission.brand_feedback.present? %>
                  <div class="mt-3 ml-13 px-3 py-2 bg-rose-50 rounded-md border-l-2 border-rose-300">
                    <p class="text-xs text-rose-700"><strong>Your feedback:</strong> <%= submission.brand_feedback %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-slate-500 text-sm">No submissions in progress</p>
          </div>
        <% end %>

      <% elsif @tab == 'completed' %>
        <!-- Completed Tab -->
        <div class="px-5 py-4 border-b border-slate-200">
          <h2 class="font-medium text-slate-900">Completed Content</h2>
          <p class="text-xs text-slate-500 mt-0.5">Approved content ready to use</p>
        </div>
        
        <% if @completed_submissions.any? %>
          <div class="divide-y divide-slate-100">
            <% @completed_submissions.each do |submission| %>
              <div class="p-4 hover:bg-slate-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3 flex-1 min-w-0">
                    <div class="w-10 h-10 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-full flex items-center justify-center text-white font-medium text-sm flex-shrink-0">
                      <%= submission.user.initials %>
                    </div>
                    
                    <div class="min-w-0 flex-1">
                      <div class="flex items-center gap-2">
                        <h3 class="font-medium text-slate-900 text-sm"><%= submission.user.name %></h3>
                        <span class="px-1.5 py-0.5 text-xs font-medium rounded <%= submission.paid? ? 'bg-green-100 text-green-700' : 'bg-emerald-100 text-emerald-700' %>">
                          <%= submission.paid? ? 'Paid' : 'Approved' %>
                        </span>
                      </div>
                      <p class="text-xs text-slate-500 mt-0.5">
                        <span class="font-medium"><%= submission.campaign.product_name %></span> • <%= submission.campaign.scenario %>
                        <% if submission.approved_at.present? %>
                          • Approved <%= time_ago_in_words(submission.approved_at) %> ago
                        <% end %>
                      </p>
                    </div>
                  </div>

                  <div class="flex items-center gap-3 ml-4">
                    <div class="text-right mr-2 hidden sm:block">
                      <p class="text-sm font-semibold text-emerald-600"><%= submission.formatted_brand_cost %></p>
                      <p class="text-xs text-slate-400">paid</p>
                    </div>
                    
                    <%= link_to brand_submission_path(submission), class: "flex items-center gap-2 px-3 py-1.5 bg-slate-900 text-white text-xs font-medium rounded-md hover:bg-slate-800 transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      View Content
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-slate-500 text-sm">No completed submissions yet</p>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-6">
      <%= link_to brand_creators_path, class: "flex items-center gap-3 p-4 bg-white rounded-xl border border-slate-200 hover:border-slate-300 transition-colors" do %>
        <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-medium text-slate-900">Browse Creators</h3>
          <p class="text-xs text-slate-500">Find creators for your campaigns</p>
        </div>
      <% end %>

      <%= link_to new_campaign_path, class: "flex items-center gap-3 p-4 bg-white rounded-xl border border-slate-200 hover:border-slate-300 transition-colors" do %>
        <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-medium text-slate-900">Create Campaign</h3>
          <p class="text-xs text-slate-500">Post a new video brief</p>
        </div>
      <% end %>
    </div>

  </div>
</div>


<div class="min-h-screen pt-20 pb-16" style="background-color: #faf8ff;">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Back Button -->
    <%= link_to brand_submissions_path(tab: 'in_progress'), class: "inline-flex items-center gap-2 text-slate-600 hover:text-slate-900 mb-6" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Submissions
    <% end %>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Video Preview (Main Content) -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
          <div class="p-6 border-b border-slate-100">
            <h1 class="text-xl font-bold text-slate-900">Review Content</h1>
            <p class="text-slate-500 mt-1">For: <%= @submission.campaign.product_name %></p>
          </div>

          <div class="p-6">
            <% if @submission.video.attached? %>
              <!-- Video Player -->
              <div class="aspect-[9/16] max-w-sm mx-auto bg-black rounded-xl overflow-hidden">
                <video 
                  controls 
                  class="w-full h-full object-contain"
                  poster=""
                >
                  <source src="<%= rails_blob_url(@submission.video) %>" type="<%= @submission.video.content_type %>">
                  Your browser does not support the video tag.
                </video>
              </div>
            <% elsif @submission.external_link.present? %>
              <!-- External Link -->
              <div class="text-center py-12">
                <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-slate-900 mb-2">External Video Link</h3>
                <p class="text-slate-500 mb-4">The creator has provided an external link to their video.</p>
                <%= link_to @submission.external_link, target: "_blank", class: "inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Open Video
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-12">
                <p class="text-slate-500">No content uploaded yet.</p>
              </div>
            <% end %>
          </div>

          <% if @submission.uploaded? %>
            <!-- Action Buttons -->
            <div class="p-6 border-t border-slate-100 bg-slate-50">
              <div class="flex flex-col sm:flex-row gap-4">
                <%= button_to approve_content_brand_submission_path(@submission), method: :post, class: "flex-1 px-6 py-3 bg-emerald-600 text-white font-semibold rounded-xl hover:bg-emerald-700 transition-colors text-center" do %>
                  <span class="flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Approve Content
                  </span>
                <% end %>

                <button 
                  type="button" 
                  onclick="document.getElementById('revision-modal').classList.remove('hidden')"
                  class="flex-1 px-6 py-3 bg-white border border-slate-300 text-slate-700 font-semibold rounded-xl hover:bg-slate-50 transition-colors text-center"
                >
                  <span class="flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Request Revision
                  </span>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Creator Info -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100">
          <h3 class="font-semibold text-slate-900 mb-4">Creator</h3>
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-indigo-500 to-violet-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
              <%= @submission.user.initials %>
            </div>
            <div>
              <p class="font-semibold text-slate-900"><%= @submission.user.name %></p>
              <% if @submission.user.location.present? %>
                <p class="text-sm text-slate-500"><%= @submission.user.location %></p>
              <% end %>
              <div class="flex items-center gap-1 mt-1">
                <% if @submission.user.rating > 0 %>
                  <span class="text-amber-500">★</span>
                  <span class="text-sm font-medium text-slate-700"><%= @submission.user.rating %></span>
                <% else %>
                  <span class="text-sm text-slate-400">No ratings yet</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Campaign Info -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100">
          <h3 class="font-semibold text-slate-900 mb-4">Campaign Details</h3>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm text-slate-500">Product</dt>
              <dd class="font-medium text-slate-900"><%= @submission.campaign.product_name %></dd>
            </div>
            <div>
              <dt class="text-sm text-slate-500">Type</dt>
              <dd class="font-medium text-slate-900"><%= @submission.campaign.scenario %></dd>
            </div>
            <div>
              <dt class="text-sm text-slate-500">Duration</dt>
              <dd class="font-medium text-slate-900"><%= @submission.campaign.duration %>s</dd>
            </div>
            <div>
              <dt class="text-sm text-slate-500">Format</dt>
              <dd class="font-medium text-slate-900"><%= @submission.campaign.aspect_ratio %></dd>
            </div>
          </dl>
        </div>

        <!-- Payment Info -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100">
          <h3 class="font-semibold text-slate-900 mb-4">Payment Breakdown</h3>
          <dl class="space-y-3">
            <div class="flex justify-between">
              <dt class="text-sm text-slate-500">Base Price</dt>
              <dd class="font-medium text-slate-900"><%= @submission.formatted_payout %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-slate-500">Platform Fee (10%)</dt>
              <dd class="font-medium text-slate-600">+ ₹<%= @submission.platform_fee_brand %></dd>
            </div>
            <div class="flex justify-between pt-3 border-t border-slate-100">
              <dt class="font-semibold text-slate-900">Total Cost</dt>
              <dd class="font-bold text-lg text-emerald-600"><%= @submission.formatted_brand_cost %></dd>
            </div>
          </dl>
        </div>

        <% if @submission.revision_count > 0 %>
          <div class="bg-amber-50 rounded-2xl p-6 border border-amber-100">
            <h3 class="font-semibold text-amber-800 mb-2">Revision History</h3>
            <p class="text-sm text-amber-700"><%= @submission.revision_count %> revision(s) requested</p>
            <% if @submission.brand_feedback.present? %>
              <p class="text-sm text-amber-600 mt-2"><strong>Last feedback:</strong> <%= @submission.brand_feedback %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Revision Request Modal -->
<div id="revision-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen px-4">
    <div class="fixed inset-0 bg-black/50 transition-opacity" onclick="document.getElementById('revision-modal').classList.add('hidden')"></div>
    
    <div class="relative bg-white rounded-2xl shadow-xl max-w-lg w-full p-6">
      <h3 class="text-xl font-bold text-slate-900 mb-4">Request Revision</h3>
      <p class="text-slate-600 mb-6">Please provide specific feedback for the creator on what changes are needed.</p>
      
      <%= form_with url: request_revision_brand_submission_path(@submission), method: :post, local: true do |f| %>
        <textarea 
          name="feedback" 
          rows="4" 
          class="w-full border border-slate-300 rounded-xl px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
          placeholder="e.g., Please make the product more visible in the first 3 seconds..."
          required
        ></textarea>
        
        <div class="flex gap-3 mt-6">
          <button 
            type="button" 
            onclick="document.getElementById('revision-modal').classList.add('hidden')"
            class="flex-1 px-4 py-3 bg-white border border-slate-300 text-slate-700 font-medium rounded-xl hover:bg-slate-50 transition-colors"
          >
            Cancel
          </button>
          <button 
            type="submit" 
            class="flex-1 px-4 py-3 bg-indigo-600 text-white font-medium rounded-xl hover:bg-indigo-700 transition-colors"
          >
            Send Feedback
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>


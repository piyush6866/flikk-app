<div class="min-h-screen pt-20 pb-16 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900">Applications</h1>
        <p class="text-sm text-slate-500 mt-0.5">Review and manage creator submissions</p>
      </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="flex items-center gap-6 mb-6 overflow-x-auto pb-2">
      <div class="flex items-center gap-2 px-3 py-1.5 bg-white rounded-full border border-slate-200 text-sm whitespace-nowrap">
        <span class="w-2 h-2 rounded-full bg-amber-400"></span>
        <span class="text-slate-600">Applications</span>
        <span class="font-medium text-slate-900"><%= @applications_count %></span>
      </div>
      <div class="flex items-center gap-2 px-3 py-1.5 bg-white rounded-full border border-slate-200 text-sm whitespace-nowrap">
        <span class="w-2 h-2 rounded-full bg-blue-500"></span>
        <span class="text-slate-600">In Progress</span>
        <span class="font-medium text-slate-900"><%= @in_progress_count %></span>
      </div>
      <div class="flex items-center gap-2 px-3 py-1.5 bg-white rounded-full border border-slate-200 text-sm whitespace-nowrap">
        <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
        <span class="text-slate-600">Completed</span>
        <span class="font-medium text-slate-900"><%= @completed_count %></span>
      </div>
    </div>

    <!-- Main Content Card -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm">
      <!-- Tabs Navigation -->
      <div class="border-b border-slate-200">
        <nav class="flex -mb-px">
          <%= link_to brand_submissions_path(tab: 'applications'), 
              class: "px-5 py-3 text-sm font-medium border-b-2 #{@tab == 'applications' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-slate-500 hover:text-slate-700'}" do %>
            Applications
            <% if @applications_count > 0 %>
              <span class="ml-1.5 text-xs bg-slate-100 text-slate-600 px-1.5 py-0.5 rounded"><%= @applications_count %></span>
            <% end %>
          <% end %>
          <%= link_to brand_submissions_path(tab: 'in_progress'), 
              class: "px-5 py-3 text-sm font-medium border-b-2 #{@tab == 'in_progress' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-slate-500 hover:text-slate-700'}" do %>
            In Progress
            <% if @in_progress_count > 0 %>
              <span class="ml-1.5 text-xs bg-slate-100 text-slate-600 px-1.5 py-0.5 rounded"><%= @in_progress_count %></span>
            <% end %>
          <% end %>
          <%= link_to brand_submissions_path(tab: 'completed'), 
              class: "px-5 py-3 text-sm font-medium border-b-2 #{@tab == 'completed' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-slate-500 hover:text-slate-700'}" do %>
            Completed
            <% if @completed_count > 0 %>
              <span class="ml-1.5 text-xs bg-slate-100 text-slate-600 px-1.5 py-0.5 rounded"><%= @completed_count %></span>
            <% end %>
          <% end %>
        </nav>
      </div>

      <div class="p-5">
        <% if @submissions.any? %>
          <div class="space-y-3">
            <% @submissions.each do |submission| %>
              <div class="flex items-center justify-between p-4 rounded-lg border border-slate-200 hover:border-slate-300 transition-colors">
                <div class="flex items-center gap-3 flex-1 min-w-0">
                  <!-- Creator Avatar -->
                  <div class="w-10 h-10 bg-gradient-to-br from-slate-600 to-slate-700 rounded-full flex items-center justify-center text-white font-medium text-sm flex-shrink-0">
                    <%= submission.user.initials %>
                  </div>
                  
                  <!-- Info -->
                  <div class="min-w-0 flex-1">
                    <div class="flex items-center gap-2">
                      <h3 class="font-medium text-slate-900 text-sm truncate"><%= submission.user.name %></h3>
                      <span class="flex-shrink-0 px-1.5 py-0.5 text-xs font-medium rounded bg-<%= submission.status_color %>-100 text-<%= submission.status_color %>-700">
                        <%= submission.status_label %>
                      </span>
                    </div>
                    <p class="text-xs text-slate-500 mt-0.5 truncate">
                      <%= submission.campaign.product_name %> â€¢ <%= time_ago_in_words(submission.created_at) %> ago
                    </p>
                  </div>
                </div>

                <!-- Right side -->
                <div class="flex items-center gap-4 ml-4">
                  <div class="text-right hidden sm:block">
                    <p class="text-sm font-semibold text-slate-900"><%= submission.formatted_brand_cost %></p>
                    <p class="text-xs text-slate-400">total cost</p>
                  </div>
                  
                  <% if submission.applied? %>
                    <div class="flex items-center gap-2">
                      <%= button_to approve_creator_brand_submission_path(submission), method: :post, class: "text-xs text-white font-medium px-3 py-1.5 bg-emerald-600 rounded-md hover:bg-emerald-700 transition-colors" do %>
                        Approve
                      <% end %>
                      <%= button_to reject_creator_brand_submission_path(submission), method: :delete, class: "text-xs text-slate-600 font-medium px-3 py-1.5 bg-slate-100 rounded-md hover:bg-slate-200 transition-colors", data: { confirm: "Decline this application?" } do %>
                        Decline
                      <% end %>
                    </div>
                  <% elsif submission.uploaded? %>
                    <%= link_to brand_submission_path(submission), class: "text-xs text-white font-medium px-3 py-1.5 bg-indigo-600 rounded-md hover:bg-indigo-700 transition-colors" do %>
                      Review
                    <% end %>
                  <% elsif submission.approved_to_upload? || submission.revision_requested? %>
                    <span class="text-xs text-slate-500 font-medium px-2.5 py-1.5 bg-slate-100 rounded-md">Awaiting Upload</span>
                  <% elsif submission.content_approved? %>
                    <span class="text-xs text-emerald-600 font-medium px-2.5 py-1.5 bg-emerald-50 rounded-md flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                      Approved
                    </span>
                  <% elsif submission.paid? %>
                    <span class="text-xs text-green-600 font-medium px-2.5 py-1.5 bg-green-50 rounded-md">Paid</span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-10">
            <p class="text-slate-500 text-sm">
              <% if @tab == 'applications' %>
                No pending applications
              <% elsif @tab == 'in_progress' %>
                No submissions in progress
              <% else %>
                No completed submissions yet
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="min-h-screen pt-24 pb-16" style="background-color: #faf8ff;">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-amber-100 text-amber-700 rounded-full text-sm font-medium mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit Campaign
      </div>
      <h1 class="text-3xl font-bold text-slate-900 mb-2">Update Campaign</h1>
      <p class="text-slate-600">Modify the details of your campaign</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-xl shadow-slate-200/50 overflow-hidden">
      <%= form_with model: @campaign, local: true, class: "divide-y divide-slate-100" do |f| %>
        
        <!-- Error Messages -->
        <% if @campaign.errors.any? %>
          <div class="p-6 bg-rose-50 border-b border-rose-100">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-rose-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h4 class="font-semibold text-rose-800 mb-1">Please fix the following errors:</h4>
                <ul class="text-sm text-rose-700 space-y-1 list-disc list-inside">
                  <% @campaign.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Section 1: Campaign Details -->
        <div class="p-8">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-indigo-100 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-slate-900">Campaign Details</h2>
              <p class="text-sm text-slate-500">Update your campaign title</p>
            </div>
          </div>

          <div class="space-y-5">
            <!-- Title -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Campaign Title *</label>
              <%= f.text_field :title, 
                  class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                  placeholder: "e.g., Summer Face Wash Unboxing Video" %>
            </div>
            
            <!-- Status -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Campaign Status</label>
              <%= f.select :status, 
                  Campaign.statuses.keys.map { |s| [s.titleize, s] },
                  {},
                  class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all appearance-none cursor-pointer" %>
            </div>
          </div>
        </div>

        <!-- Section 2: Product Information -->
        <div class="p-8">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-emerald-100 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-slate-900">Product Information</h2>
              <p class="text-sm text-slate-500">Update product details</p>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <!-- Product Name -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Product Name *</label>
              <%= f.text_field :product_name, 
                  class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                  placeholder: "e.g., GlowUp Face Wash" %>
            </div>

            <!-- Product URL -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Product URL</label>
              <%= f.url_field :product_url, 
                  class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                  placeholder: "https://yourstore.com/product" %>
            </div>
          </div>
        </div>

        <!-- Section 3: Video Requirements -->
        <div class="p-8">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-violet-100 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-slate-900">Video Requirements</h2>
              <p class="text-sm text-slate-500">Update video specifications</p>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
            <!-- Scenario -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Video Type *</label>
              <%= f.select :scenario, 
                  Campaign::SCENARIOS.map { |s| [s, s] },
                  {},
                  class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all appearance-none cursor-pointer" %>
            </div>

            <!-- Aspect Ratio -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Aspect Ratio *</label>
              <%= f.select :aspect_ratio, 
                  Campaign::ASPECT_RATIOS,
                  {},
                  class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all appearance-none cursor-pointer" %>
            </div>

            <!-- Duration -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Duration *</label>
              <%= f.select :duration, 
                  Campaign::DURATIONS.map { |d| ["#{d} seconds", d] },
                  {},
                  class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all appearance-none cursor-pointer" %>
            </div>
          </div>
        </div>

        <!-- Section 4: Budget & Instructions -->
        <div class="p-8">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-amber-100 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-slate-900">Budget & Instructions</h2>
              <p class="text-sm text-slate-500">Update payout and guidelines</p>
            </div>
          </div>

          <div class="space-y-5">
            <!-- Price -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Creator Payout (₹) *</label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 font-medium">₹</span>
                <%= f.number_field :price, 
                    class: "w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all",
                    placeholder: "2500",
                    min: 500,
                    max: 100000,
                    step: 100 %>
              </div>
            </div>

            <!-- Instructions -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Detailed Instructions</label>
              <%= f.text_area :instructions, 
                  rows: 6,
                  class: "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all resize-none",
                  placeholder: "Provide detailed instructions for creators..." %>
            </div>
          </div>
        </div>

        <!-- Submit Section -->
        <div class="p-8 bg-slate-50">
          <div class="flex flex-col sm:flex-row gap-4 justify-end">
            <%= link_to campaign_path(@campaign), class: "px-6 py-3 text-center font-medium text-slate-600 bg-white border border-slate-200 rounded-xl hover:bg-slate-100 transition-colors" do %>
              Cancel
            <% end %>
            <%= f.submit "Save Changes", class: "px-8 py-3 font-semibold text-white bg-gradient-to-r from-indigo-600 to-violet-600 rounded-xl hover:from-indigo-700 hover:to-violet-700 transition-all shadow-lg shadow-indigo-500/25 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

